<div class = "container">
  <h1>Edit this contact</h1>
  <%= form_tag "/contacts/#{@edited_contact.id}", method: :patch do %>
    <div>
      <div class = "form-group">
        <%= label_tag :input_first_name %>
        <%= text_field_tag :input_first_name, @edited_contact.first_name %>
      </div>
      <div class = "form-group">
        <%= label_tag :input_last_name %>
        <%= text_field_tag :input_last_name, @edited_contact.last_name %>
      </div>
      <div class = "form-group">
        <%= label_tag :input_phone_number %>
        <%= text_field_tag :input_phone_number, @edited_contact.phone_number %>
      </div>
      <div class = "form-group">
        <%= label_tag :input_email %>
        <%= text_field_tag :input_email, @edited_contact.email%>
      </div>
      <div>
        <%= submit_tag 'Send' %>
      </div>
    </div>

  <% end %>
</div>