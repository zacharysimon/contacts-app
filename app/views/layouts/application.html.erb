<!DOCTYPE html>
<html>
<head>
  <title>PracticeContactList</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class = "container">

</div>

<div class = "container">
  <ul class = "nav nav-pills">
    <% unless current_user %>
      <li><a href="/users/sign_up">Sign Up</a></li>
      <li><a href="/users/sign_in">Sign In</a></li>
    <% end %>
    <% if current_user %>
      <li role="presentation"><a href="/">Contact List</a></li>
      <li role="presentation"><a href="/contacts/new">Add contact</a></li>
    <% end %>
    <form class="navbar-form navbar-right" role="search" action="/contacts">
      <div class="form-group">
         <input id="search" name="search" type="text" class="form-control" placeholder="Search Contacts">
      </div>
    </form>
  </ul>

<div class="container-fluid">
<% flash.each do |name, message| %>
  <div class="alert alert-<%= name %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><p><%= message %></p>
  </div>
<% end %>

  
<%= yield %>
</div>
<% if current_user %>
      <%= link_to "Sign Out", "/users/sign_out", method: :delete %>
<% end %>
</body>
</html>
